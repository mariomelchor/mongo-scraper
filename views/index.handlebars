{{#if articles}}

  <div id="articles">
    <div class="row">

    {{#each articles}}
      <div class="article-item col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title blue-text text-darken-4"><a href="{{this.link}}">{{this.title}}</a></span>
            <p>I am a very simple card. I am good at containing small bits of information.
            I am convenient because I require little markup to use effectively.</p>
          </div><!--/.card-content -->
          <div class="card-action">
            <a href="{{this.link}}" class="blue-text text-darken-2">View Article &rarr;</a>
          </div><!--/.card-action -->
        </div><!--/.card -->
      </div><!--/.article-item -->
    {{/each}}


    </div><!--/.row -->
  </div><!-- /#articles -->

{{else}}
  <h1>There are no articles</h1>
{{/if}}